<div class="row">
  <div class=" col-md-4 col-md-offset-4">
        <%= form_for @post do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control" %>
            </div>
            <%= f.submit "Post", class: "btn btn-primary" %>
            
        <% end %>
    </div>
</div>